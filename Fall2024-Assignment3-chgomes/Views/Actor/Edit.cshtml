@model Fall2024_Assignment3_chgomes.Models.Actor

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-primary">Edit</h1>

<h4 class="text-secondary">Actor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label text-info"></label>
                <input asp-for="Name" class="form-control border-primary" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label text-info"></label>
                <input asp-for="Gender" class="form-control border-primary" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label text-info"></label>
                <input asp-for="Age" class="form-control border-primary" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Imdb" class="control-label text-info"></label>
                <input asp-for="Imdb" class="form-control border-primary" />
                <span asp-validation-for="Imdb" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Photo" class="control-label text-info"></label>
                <input asp-for="Photo" type="file" class="form-control border-primary" />
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
