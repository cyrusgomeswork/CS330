@model Fall2024_Assignment3_chgomes.Models.Movie

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-primary">Create</h1>

<h4 class="text-secondary">Movie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label text-info"></label>
                <input asp-for="Title" class="form-control border-primary" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genre" class="control-label text-info"></label>
                <input asp-for="Genre" class="form-control border-primary" />
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label text-info"></label>
                <input asp-for="Year" class="form-control border-primary" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Imdb" class="control-label text-info"></label>
                <input asp-for="Imdb" class="form-control border-primary" />
                <span asp-validation-for="Imdb" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Poster" class="control-label text-info"></label>
                <input asp-for="Poster" type="file" class="form-control border-primary" />
                <span asp-validation-for="Poster" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
